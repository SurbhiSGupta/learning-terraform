terraform {
  required_providers {
    chronosphere = {
      version = "0.23.2"
      source  = "tf-registry.chronosphere.io/chronosphere/chronosphere"
    }
  }
}
provider "chronosphere" {
  org = "rc-uat-qa"
}

resource "chronosphere_bucket" "surbhi-terra-bucket" {
  # Human readable name of the bucket.
  name = "Surbhi Terra Playground"

  # Optional slug of the bucket.
  slug = "surbhi-terra"

  # Arbitrary labels to attach to the bucket.
  labels = {
    "owner" = "trial"
  }

  # Free-form description of the bucket.
  description = "Trying with terrorform."

  # The notification policy used for the bucket.
  # This is optional but must be set for buckets that contain alerts.
  # Read the Alerts > Notifications docs for more details.
  # notification_policy_data = chronosphere_notification_policy.infra.notification_policy_data
}


